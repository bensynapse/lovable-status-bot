# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHANNEL_ID=@your_channel_id_or_chat_id

# Feed Configuration
RSS_FEED_URL=https://status.lovable.dev/feed.rss
